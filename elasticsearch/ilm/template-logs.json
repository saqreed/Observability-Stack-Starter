{
  "index_templates": [
    {
      "name": "logs-template",
      "index_template": {
        "index_patterns": ["logs-*"] ,
        "template": {
          "settings": {
            "index.lifecycle.name": "logs-ilm",
            "number_of_shards": 1,
            "number_of_replicas": 0
          },
          "mappings": {
            "properties": {
              "@timestamp": {"type": "date"},
              "level": {"type": "keyword"},
              "message": {"type": "text"},
              "service": {"type": "keyword"}
            }
          }
        },
        "priority": 500
      }
    }
  ]
}
